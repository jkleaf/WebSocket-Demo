<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="tk.leaflame.websocketdemo.mapper.UserMapper">
    <insert id="regUser">
        insert into user (username, password, email, avatar, wins, scores)
        values (#{user.username}, #{user.password}, #{user.email}, null, 0, 0)
    </insert>
    <select id="loadUserByUserName" resultType="tk.leaflame.websocketdemo.entity.User">
        select *
        from user
        where username = #{username}
    </select>
</mapper>
